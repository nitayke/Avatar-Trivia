<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avatar_trivia">

    <application
        android:allowBackup="true"
        android:icon="@drawable/aanglogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.avatar_trivia.BestScoresActivity"
            android:label="@string/title_activity_best_scores"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.avatar_trivia.ResultActivity" />
        <activity android:name="com.avatar_trivia.GameActivity" />
        <activity android:name="com.avatar_trivia.AddQuestionActivity" />
        <activity android:name="com.avatar_trivia.HomeActivity" />
        <activity android:name="com.avatar_trivia.SignupActivity" />
        <activity android:name="com.avatar_trivia.LoginActivity" />
        <activity android:name="com.avatar_trivia.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/aangbg"
    android:layout_height="match_parent"
    tools:context=".AddQuestionActivity">

    <TextView
        android:id="@+id/addQuestionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik"
        android:shadowColor="#000000"
        android:layout_marginTop="100sp"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="הוסף שאלה"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addQuestionQuestion"
        android:hint="שאלה"
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/rubik"
        android:background="@drawable/edittxt"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlSymmetry"
        app:layout_constraintTop_toBottomOf="@+id/addQuestionText"/>

    <EditText
        android:id="@+id/addQuestionCorrect"
        android:hint="תשובה נכונה"
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/rubik"
        android:background="@drawable/edittxt"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlSymmetry"
        app:layout_constraintTop_toBottomOf="@+id/addQuestionQuestion" />

    <EditText
        android:id="@+id/addQuestionFalse1"
        android:hint="תשובה שגויה 1"
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/rubik"
        android:background="@drawable/edittxt"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlSymmetry"
        app:layout_constraintTop_toBottomOf="@+id/addQuestionCorrect" />

    <EditText
        android:id="@+id/addQuestionFalse2"
        android:hint="תשובה שגויה 2"
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/rubik"
        android:background="@drawable/edittxt"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlSymmetry"
        app:layout_constraintTop_toBottomOf="@+id/addQuestionFalse1" />

    <EditText
        android:id="@+id/addQuestionFalse3"
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/rubik"
        android:background="@drawable/edittxt"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlSymmetry"
        android:hint="תשובה שגויה 3"
        app:layout_constraintTop_toBottomOf="@+id/addQuestionFalse2"/>

    <Button
        android:id="@+id/addQuestionBtn"
        android:textSize="27sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="250dp"
        android:fontFamily="@font/rubik"
        android:background="@drawable/button"
        android:text="הוסף שאלה"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addQuestionFalse3" />

    <TextView
        android:id="@+id/addQuestionMsg"
        android:layout_width="317dp"
        android:layout_height="30dp"
        android:fontFamily="@font/rubik"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addQuestionBtn" />

    <ProgressBar
        android:id="@+id/addQuestionProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="120dp"
        android:visibility="gone"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
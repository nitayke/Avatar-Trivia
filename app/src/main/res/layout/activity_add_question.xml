<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/aangbg"
    android:layout_height="match_parent"
    tools:context=".AddQuestionActivity">

    <TextView
        android:id="@+id/addQuestionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik"
        android:shadowColor="#000000"
        android:layout_marginTop="100sp"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="הוסף שאלה"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="310dp"
        android:layout_height="356dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/addQuestionQuestion"
            android:layout_width="300sp"
            android:layout_height="40sp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edittxt"
            android:singleLine="true"
            android:fontFamily="@font/rubik"
            android:hint="שאלה"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:textSize="23sp"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/addQuestionCorrect"
            android:layout_width="300sp"
            android:layout_height="40sp"
            android:layout_marginTop="50dp"
            android:singleLine="true"
            android:background="@drawable/edittxt"
            android:fontFamily="@font/rubik"
            android:hint="תשובה נכונה"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:textSize="23sp"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/addQuestionFalse1"
            android:layout_width="300sp"
            android:layout_height="40sp"
            android:singleLine="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittxt"
            android:fontFamily="@font/rubik"
            android:hint="תשובה שגויה 1"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:textSize="23sp"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/addQuestionFalse2"
            android:layout_width="300sp"
            android:layout_height="40sp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittxt"
            android:singleLine="true"
            android:fontFamily="@font/rubik"
            android:hint="תשובה שגויה 2"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:textSize="23sp"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/addQuestionFalse3"
            android:layout_width="300sp"
            android:layout_height="40sp"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:background="@drawable/edittxt"
            android:fontFamily="@font/rubik"
            android:hint="תשובה שגויה 3"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:textSize="23sp"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>


    <Button
        android:id="@+id/addQuestionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="250dp"
        android:background="@drawable/button"
        android:fontFamily="@font/rubik"
        android:text="הוסף שאלה"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/addQuestionMsg"
        android:layout_width="317dp"
        android:layout_height="30dp"
        android:fontFamily="@font/rubik"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addQuestionBtn" />

    <ProgressBar
        android:id="@+id/addQuestionProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="120dp"
        android:visibility="gone"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>